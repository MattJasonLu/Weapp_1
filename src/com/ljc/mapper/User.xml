<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ljc.mapper.UserMapper">
    <insert id="add" parameterType="User" >
        insert into t_user ( account, password, authority, studentId ) values (#{account}, #{password}, #{authority}, #{studentId})
    </insert>

    <delete id="delete" parameterType="User" >
        delete from t_user where id= #{id}
    </delete>

    <select id="get" parameterType="User" resultType="User">
        select * from   t_user
        <where>
            <if test="id!=null and id!=''">
                and id = #{id}
            </if>
            <if test="account!=null and account!='' and password!=null and password!=''">
                and account = #{account} and password = #{password}
            </if>
        </where>
    </select>

    <update id="update" parameterType="User" >
        update t_user set password=#{password} where id=#{id}
    </update>
    <select id="list" resultType="User">
        select * from   t_user
    </select>
</mapper>